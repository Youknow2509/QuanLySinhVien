<UserControl x:Class="QLDT_WPF.Views.Components.LopHocPhanDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:local="clr-namespace:QLDT_WPF.Views.Components"
             Background="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back Button -->
        <Button Grid.Row="0"
                Content="← Back"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="0,0,0,10"
                Padding="10,5"
                FontSize="14"
                Background="#3A82E5"
                Foreground="White"
                BorderBrush="Transparent"
                Click="BackButton_Click" />

        <!-- Lop Hoc Phan Title -->
        <TextBlock Grid.Row="1"
                   Text="Chi tiết lớp học phần"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#333333"
                   Margin="0,0,0,10"
                   HorizontalAlignment="Center"/>

        <!-- Calendar for Lop Hoc Phan -->
        <Border Grid.Row="2" Padding="20" Background="#F8F9FA" CornerRadius="8" BorderBrush="#DDDDDD" BorderThickness="1" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Lịch Học Của Lớp Học Phần" FontSize="16" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,10"/>
                <local:CalendarComponent Width="800"/>
            </StackPanel>
        </Border>

        <!-- Student List with Pagination -->
        <StackPanel Grid.Row="3" Margin="0,10,0,10">
            <Border Padding="20" Background="#FFFFFF" CornerRadius="8" BorderBrush="#DDDDDD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Danh Sách Sinh Viên Thuộc Lớp Học Phần" FontSize="16" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,10"/>
                    <syncfusion:SfDataGrid x:Name="StudentDataGrid"
                                           AutoGenerateColumns="False"
                                           RowHeight="35"
                                           AllowSorting="True"
                                           BorderBrush="#DDDDDD"
                                           BorderThickness="1">
                        <syncfusion:SfDataGrid.Columns>
                            <syncfusion:GridTextColumn HeaderText="Họ Và Tên" MappingName="HoVaTen" Width="200" />
                            <syncfusion:GridTextColumn HeaderText="Lớp" MappingName="Lop" Width="150" />
                            <syncfusion:GridTextColumn HeaderText="Ngày Sinh" MappingName="NgaySinh" Width="150" />
                            <syncfusion:GridTextColumn HeaderText="Địa Chỉ" MappingName="DiaChi" Width="250" />
                            <syncfusion:GridTextColumn HeaderText="Chương Trình Học" MappingName="ChuongTrinhHoc" Width="200" />
                        </syncfusion:SfDataGrid.Columns>
                    </syncfusion:SfDataGrid>
                </StackPanel>
            </Border>
            <syncfusion:SfDataPager x:Name="StudentPager"
                                    PageSize="10"
                                    Source="{Binding FilteredStudents}"
                                    HorizontalAlignment="Center"
                                    Margin="0,10,0,0" />
        </StackPanel>

        <!-- Score Table with Pagination -->
        <StackPanel Grid.Row="4" Margin="0,10,0,10">
            <Border Padding="20" Background="#FFFFFF" CornerRadius="8" BorderBrush="#DDDDDD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Danh Sách Điểm Sinh Viên Thuộc Lớp Học Phần" FontSize="16" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,10"/>
                    <syncfusion:SfDataGrid x:Name="ScoreDataGrid"
                                           AutoGenerateColumns="False"
                                           RowHeight="35"
                                           AllowSorting="True"
                                           BorderBrush="#DDDDDD"
                                           BorderThickness="1">
                        <syncfusion:SfDataGrid.Columns>
                            <syncfusion:GridTextColumn HeaderText="Sinh Viên" MappingName="SinhVien" Width="200" />
                            <syncfusion:GridTextColumn HeaderText="Điểm Quá Trình" MappingName="DiemQuaTrinh" Width="150" />
                            <syncfusion:GridTextColumn HeaderText="Điểm Kết Thúc" MappingName="DiemKetThuc" Width="150" />
                            <syncfusion:GridTextColumn HeaderText="Điểm Tổng Kết" MappingName="DiemTongKet" Width="150" />
                            <syncfusion:GridTextColumn HeaderText="Trạng Thái" MappingName="TrangThai" Width="150" />
                        </syncfusion:SfDataGrid.Columns>
                    </syncfusion:SfDataGrid>
                </StackPanel>
            </Border>
            <syncfusion:SfDataPager x:Name="ScorePager"
                                    PageSize="10"
                                    Source="{Binding FilteredScores}"
                                    HorizontalAlignment="Center"
                                    Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</UserControl>
