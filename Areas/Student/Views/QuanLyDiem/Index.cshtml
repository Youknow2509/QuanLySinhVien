@section Styles {
    <link href="~/sb-admin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}

@section Scripts {
    <!-- Page level plugins -->
    <script src="~/sb-admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/sb-admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/sb-admin/js/demo/datatables-demo.js"></script>
}

@model IEnumerable<Diem>
<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Bảng dữ liệu Chương Trình Học</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Lớp Học Phần</th>
                            <th>Sinh Viên</th>
                            <th>Điểm Quá Trình</th>
                            <th>Điểm Kết Thúc</th>
                            <th>Điểm Tổng Kết</th>
                            <th>Lần Học</th>
                            <th>Trạng Thái</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Lớp Học Phần</th>
                            <th>Sinh Viên</th>
                            <th>Điểm Quá Trình</th>
                            <th>Điểm Kết Thúc</th>
                            <th>Điểm Tổng Kết</th>
                            <th>Lần Học</th>
                            <th>Trạng Thái</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            var res = item.DiemTongKet < 4;
                            string ketqua = res ? "Học Lại" : "Qua Môn";
                            string color = res ? "text-danger" : "text-success"; 

                            <tr class="@color">
                                <th>@item.LopHocPhans.TenHocPhan</th>
                                <th>@item.SinhViens.HoTen</th>
                                <th>@item.DiemQuaTrinh</th>
                                <th>@item.DiemKetThuc</th>
                                <th>@item.DiemTongKet</th>
                                <th>@item.DiemTongKet</th>
                                <th>
                                    @ketqua
                                </th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
