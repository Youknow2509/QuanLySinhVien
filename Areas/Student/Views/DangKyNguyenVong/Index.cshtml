@model SinhVien

@{
    ViewData["Title"] = "Đăng Kí Nguyện Vọng";
}

@section Styles {
    <link href="~/sb-admin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}

@section Scripts {
    <!-- Page level plugins -->
    <script src="~/sb-admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/sb-admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Handle -->
    <script>
        $(document).ready(function () {
            // Kết Quả Đăng Kí Học Cải Thiện
            $("#dataTable_nguyen_vong").dataTable({
                ajax: {
                    url: '/api/NguyenVong/sinhvien/@Model.IdSinhVien',
                    type: 'GET',
                    dataSrc: '',
                },
                columns: [
                    {data: 'idSinhVien'},
                    {data: 'tenSinhVien'},
                    {data: 'tenMonHoc'},
                    {
                        data: 'trangThai',
                        render: function (data, type, row) {
                            if (row.data == null) {
                                return "Chưa Xác Nhận";
                            } else if (row.data == fasle) {
                                return "Đã Xác Nhận";
                            } else {
                                return "Đã Hủy";
                            }
                        }
                    },
                ],
                language: {
                    url: '/sb-admin/json/data_tables_vi.json',
                },
            });
        
            // Hiện Thị Các Môn Có Thể Đăng Kí Học Cải Thiện
            $("#dataTable_hoc_cai_hien").dataTable({
                ajax: {
                    url: '/api/diem/@Model.IdSinhVien/sinhvien/dangkinguyenvong',
                    type: 'GET',
                    dataSrc: '',
                },
                columns: [
                    {data: 'tenLopHocPhan'},
                    {data: 'diemQuaTrinh'},
                    {data: 'diemKetThuc'},
                    {data: 'diemTongKet'},
                    {data: 'lanHoc'},
                    {
                        data: null,
                        render: function (data, type, row) {
                            // TODO code
                        }
                    },
                ],
            });

            
        });
    </script>
}

<!-- Bảng Danh Sách Môn Học Cải Thiện -->
<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Các Học Phần Có Thể Đăng Ký Học Cải Thiện</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable_hoc_cai_hien" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Lớp Học Phần</th>
                            <th>Điểm Quá Trình</th>
                            <th>Điểm Kết Thúc</th>
                            <th>Điểm Tổng Kết</th>
                            <th>Lần Học</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Lớp Học Phần</th>
                            <th>Điểm Quá Trình</th>
                            <th>Điểm Kết Thúc</th>
                            <th>Điểm Tổng Kết</th>
                            <th>Lần Học</th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

</div>

