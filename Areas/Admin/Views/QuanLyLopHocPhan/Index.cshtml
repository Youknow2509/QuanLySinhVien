@section Styles {
    <link href="~/sb-admin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}

@section Scripts {
    <!-- Page level plugins -->
    <script src="~/sb-admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/sb-admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                ajax: {
                    url: '/api/lophocphan/',
                    type: 'GET',
                    dataSrc: '',
                },
                columns: [
                    {
                        data: 'tenLopHocPhan',
                        render: function (data, type, row) {
                            return '<a href="/Admin/QuanLyHocPhan/Details/' + row.idLopHocPhan + '">' + data + '</a>';
                        }
                    },
                    {
                        data: 'tenGiaoVien',
                        render: function (data, type, row) {
                            return '<a href="/Admin/QuanLyGiaoVien/Details/?IdGiaoVien=' + row.idGiaoVien + '">' + data + '</a>';
                        }
                    },
                    {
                        data: 'tenMonHoc',
                        render: function (data, type, row) {
                            return '<a href="/Admin/QuanLyMonHoc/Details/' + row.idMonHoc + '">' + data + '</a>';
                        }
                    },
                ],
                language: {
                    url: '/sb-admin/json/data_tables_vi.json',
                },
            });
        });
    </script>
}

<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Bảng dữ liệu Lớp Học Phần</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Lớp Học Phần</th>
                            <th>Giảng Viên</th>
                            <th>Môn học</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Lớp Học Phần</th>
                            <th>Giảng Viên</th>
                            <th>Môn học</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

</div>