@model IEnumerable<SinhVien>

@{
    ViewBag.Title = "Quản lý Sinh Viên";
}

@section Styles {
    <link href="~/sb-admin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}

@section Scripts {
    <!-- Page level plugins -->
    <script src="~/sb-admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/sb-admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/sb-admin/js/demo/datatables-demo.js"></script>
}

<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Bảng dữ liệu Sinh Viên</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Họ Và Tên</th>
                            <th>Lớp</th>
                            <th>Ngày Sinh</th>
                            <th>Địa Chỉ</th>
                            <th>Chương Trình Học</th>
                            <th>Khoa</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Họ Và Tên</th>
                            <th>Lớp</th>
                            <th>Ngày Sinh</th>
                            <th>Địa Chỉ</th>
                            <th>Chương Trình Học</th>
                            <th>Khoa</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.HoTen</td>
                                <td>@item.Lop</td>
                                <td>@item.NgaySinh</td>
                                <td>@item.DiaChi</td>
                                <td>@item.ChuongTrinhHocs.TenChuongTrinhHoc</td>
                                <td>@item.Khoas.TenKhoa</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->

