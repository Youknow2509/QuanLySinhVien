@model IEnumerable<MonHoc>
<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Bảng dữ liệu Môn Học</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tên Môn Học</th>
                            <th>Số Tín Chỉ</th>
                            <th>Số Tiết</th>
                            <th>Khoa</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Tên Môn Học</th>
                            <th>Số Tín Chỉ</th>
                            <th>Số Tiết</th>
                            <th>Khoa</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.TenMonHoc</td>
                                <td>@item.SoTinChi</td>
                                <td>@item.SoTietHoc</td>
                                <td>@item.Khoas.TenKhoa</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
