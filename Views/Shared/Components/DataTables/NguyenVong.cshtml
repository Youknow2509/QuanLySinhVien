@model IEnumerable<DangKyNguyenVong>
<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Nguyện Vọng Đăng Kí</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mã Sinh Viên</th>
                            <th>Tên Sinh Viên</th>
                            <th>Môn Học</th>
                            <th>Trạng Thái</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Mã Sinh Viên</th>
                            <th>Tên Sinh Viên</th>
                            <th>Môn Học</th>
                            <th>Trạng Thái</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            string colorDiv = "";
                            if (item.TrangThai == null)
                            {
                                colorDiv = "bg-warning";
                            }
                            else if (item.TrangThai == true)
                            {
                                colorDiv = "bg-success";
                            }
                            else
                            {
                                colorDiv = "bg-danger";
                            }
                            <tr class="@colorDiv">
                                <td>@item.SinhViens.IdSinhVien</td>
                                <td>@item.SinhViens.HoTen</td>
                                <th>@item.MonHocs.TenMonHoc</th>
                                <td>@item.TrangThai</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
