@model MonHoc

@{
    ViewBag.Title = "Chi tiết môn học";
}

@section Styles {
    <link href="~/sb-admin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}

@section Scripts {
    <!-- Page level plugins -->
    <script src="~/sb-admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/sb-admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Handle data  table -->
    <script>
        // handle data table
        $(document).ready(function () {
            $('#dataTable').DataTable({
                ajax: {
                    url: '/api/LopHocPhan/@Model.IdMonHoc/monhoc/',
                    type: 'GET',
                    dataSrc: '',
                },
                columns: [
                    {
                        data: 'tenHocPhan',
                        render: function (data, type, row) {
                            return '<a href="/QuanLyLopHocPhan/Details?IdLopHocPhan=' + row.idLopHocPhan + '">' + data + '</a>';
                        }
                    },
                    {
                        data: 'tenGiaoVien',
                        render: function (data, type, row) {
                            return '<a href="/QuanLyGiaoVien/Details?IdGiaoVien=' + row.idGiaoVien + '">' + data + '</a>';
                        }
                    },
                    { data: 'soTinChi' },
                    { data: 'soTietHoc' },
                    {
                        data: 'thoiGianBatDau',
                        render: function (data) {
                            if (data) {
                                var date = new Date(data);
                                var day = ('0' + date.getDate()).slice(-2);
                                var month = ('0' + (date.getMonth() + 1)).slice(-2);
                                var year = date.getFullYear();
                                return `${day}-${month}-${year}`;
                            }
                            return '';
                        }
                    },
                    {
                        data: 'thoiGianKetThuc',
                        render: function (data) {
                            if (data) {
                                var date = new Date(data);
                                var day = ('0' + date.getDate()).slice(-2);
                                var month = ('0' + (date.getMonth() + 1)).slice(-2);
                                var year = date.getFullYear();
                                return `${day}-${month}-${year}`;
                            }
                            return '';
                        }
                    }
                ],
                responsive: true,
                language: {
                    url: '/sb-admin/json/data_tables_vi.json',
                },
            });
        });

    </script>
}

<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh Sách Các Lớp Học Phần Đang Dạy Môn @Model.TenMonHoc</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Lớp Học Phần</th>
                            <th>Giảng Viên</th>
                            <th>Số Tín Chỉ</th>
                            <th>Số Tiết Học</th>
                            <th>Thời Gian Bắt Đầu</th>
                            <th>Thời Gian Kết Thúc</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Lớp Học Phần</th>
                            <th>Giảng Viên</th>
                            <th>Số Tín Chỉ</th>
                            <th>Số Tiết Học</th>
                            <th>Thời Gian Bắt Đầu</th>
                            <th>Thời Gian Kết Thúc</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>